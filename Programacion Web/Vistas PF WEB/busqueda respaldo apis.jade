extends ../templates/default
block content
  div(ng-app='')
    form#formSearch.formSearch(method='get', action='')
      .col-md-4.col-md-offset-4
        .col-md-9
          input#search.form-control(type='text', ng-model='busqueda', placeholder='Busca tu Autor', aria-label='Username', aria-describedby='basic-addon1')

        .col-md-3
          button#boton.btn.btn-warning(name='boton', type='button')
            span.glyphicon.glyphicon-search(aria-hidden='true')
          br
          br
      .col-md-3.col-md-offset-5  
          .row
            .col-md-6(style = "width: 60%;" )
              h5
              | Cantidad de Resultados: 
            .col-md-4
              select#cantRes.form-control-sm.form-control(data-width='150px')
                option(value='10') 10
                option(value='15') 15
                option(value='20') 20
                option(value='25') 25
    .container                
    .principal
      #buscador

        h3(align='center') Buscador
        h4(align='center') Resultados de: {{busqueda}}
        div(align='center') 
      #customResults
        script.
          (function() {
